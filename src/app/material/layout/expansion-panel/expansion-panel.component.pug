.material-wrap
    mat-accordion.example-headers-align
        mat-expansion-panel([expanded]="step === 0", (opened)="setStep(0)", hideToggle="true")
            mat-expansion-panel-header
                mat-panel-title
                    | Personal data
                |
                mat-panel-description
                    | Type your name and age
                    mat-icon account_circle
            |
            mat-form-field
                input(matInput="", placeholder="First name")
            |
            mat-form-field
                input(matInput="", type="number", min="1", placeholder="Age")
            |
            mat-action-row
                button(mat-button="", color="primary", (click)="nextStep()") Next
        |
        mat-expansion-panel([expanded]="step === 1", (opened)="setStep(1)", hideToggle="true")
            mat-expansion-panel-header
                mat-panel-title
                    | Destination
                |
                mat-panel-description
                    | Type the country name
                    mat-icon map
            |
            mat-form-field
                input(matInput="", placeholder="Country")
            |
            mat-action-row
                button(mat-button="", color="warn", (click)="prevStep()") Previous
                |
                button(mat-button="", color="primary", (click)="nextStep()") Next
        |
        mat-expansion-panel([expanded]="step === 2", (opened)="setStep(2)", hideToggle="true")
            mat-expansion-panel-header
                mat-panel-title
                    | Day of the trip
                |
                mat-panel-description
                    | Inform the date you wish to travel
                    mat-icon date_range
            |
            mat-form-field
                input(matInput="", placeholder="Date", [matDatepicker]="picker", (focus)="picker.open()", readonly="")
            |
            mat-datepicker(#picker="")
            |
            mat-action-row
                button(mat-button="", color="warn", (click)="prevStep()") Previous
                |
                button(mat-button="", color="primary", (click)="nextStep()") End
