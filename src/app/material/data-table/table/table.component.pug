.example-container.mat-elevation-z8
    .example-header
        mat-form-field
            input(matInput="", (keyup)="applyFilter($event.target.value)", placeholder="Filter")
    |
    mat-table(#table="", [dataSource]="dataSource", matSort="")
        //- Note that these columns can be defined in any order.
          The actual rendered columns are set as a property on the row definition"
        // Position Column
        ng-container(matColumnDef="position")
            mat-header-cell(*matHeaderCellDef="", mat-sort-header="")  No.
            |
            mat-cell(*matCellDef="let row")  {{row.position}}
        // Name Column
        ng-container(matColumnDef="name")
            mat-header-cell(*matHeaderCellDef="", mat-sort-header="")  Name
            |
            mat-cell(*matCellDef="let row")  {{row.name}}
        // Weight Column
        ng-container(matColumnDef="weight")
            mat-header-cell(*matHeaderCellDef="", mat-sort-header="")  Weight
            |
            mat-cell(*matCellDef="let row")  {{row.weight}}
        // Symbol Column
        ng-container(matColumnDef="symbol")
            mat-header-cell(*matHeaderCellDef="", mat-sort-header="")  Symbol
            |
            mat-cell(*matCellDef="let row")  {{row.symbol}}
        |
        mat-header-row(*matHeaderRowDef="displayedColumns")
        |
        mat-row(*matRowDef="let row; columns: displayedColumns;")
    |
    mat-paginator(#paginator="", [pageSize]="10", [pageSizeOptions]="[5, 10, 20]")